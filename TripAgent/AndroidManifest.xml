<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="hr.algebra.tripagent"
    android:versionCode="1"
    android:versionName="1.0" >

    <!-- We add the permission for the android application to use internet connection -->
    <uses-permission android:name="android.permission.INTERNET" />

    <!-- Camera permissions -->
    <uses-feature android:name="android.hardware.camera" />

    <uses-permission android:name="android.permission.CAMERA" />

    <uses-feature android:name="android.hardware.camera.autofocus" />

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <uses-sdk
        android:minSdkVersion="11"
        android:targetSdkVersion="17" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="hr.algebra.tripagent.LogInActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="hr.algebra.tripagent.RegisterUserActivity"
            android:label="@string/title_activity_register_user" >
        </activity>
        <activity
            android:name="hr.algebra.tripagent.SearchActivity"
            android:label="@string/title_activity_search" >
        </activity>
        <activity
            android:name="hr.algebra.tripagent.TripPostActivity"
            android:label="@string/title_activity_trip_post" >
        </activity>
        <activity
            android:name="hr.algebra.tripagent.SearchResultsActivity"
            android:label="@string/title_activity_search_results" >
        </activity>
        <activity
            android:name="hr.algebra.tripagent.HistoryActivity"
            android:label="@string/title_activity_history" >
        </activity>
    </application>

</manifest>